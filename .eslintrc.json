{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": ["prettier"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["prettier", "react", "react-hooks"],
    "rules": {
        "no-console": "off",
        "linebreak-style": "off",
        "import/prefer-default-export": "off",
        "import/extensions": 0,
        "react/jsx-uses-react": "off",
        "react/react-in-jsx-scope": "off",
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn"
    }
}
